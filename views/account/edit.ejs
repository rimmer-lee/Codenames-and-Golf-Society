<% layout('layouts/boilerplate') %>    
<div class="row my-3 pb-2 border-bottom border-1">
    <h1>Edit Account</h1>
</div>
<form class="row gy-3 needs-validation check-password" method="POST" action="/account/<%= user.id %>?_method=PUT" novalidate>
    <div class="col-12">
        <div class="row d-flex">
            <div class="col-11 col-md-8 col-lg-6 border border-3 rounded-3 mx-auto px-3">
                <div class="row gy-3 py-3">
                    <%- include('../partials/forms/account/email', { id: 'email', name: `user[${user.id}][email]`, value: user.email }) %>
                    <%- include('../partials/forms/account/register-password', { id: 'password', name: `user[${user.id}][password]`, value: '', options: '' }) %>
                    <%- include('../partials/forms/account/password-check', { id: 'password-check' }) %>
                    <%- include('../partials/forms/account/title', { id: 'title', name: `user[${user.id}][name][title]`, titles: nameTitles, value: user.name.title }) %>
                    <%- include('../partials/forms/account/full-name', { id: 'full-name', name: `user[${user.id}][name][full]`, value: user.name.full }) %>
                    <%- include('../partials/forms/account/preferred-name', { id: 'preferred-name', name: `user[${user.id}][name][preferred]`, value: user.name.preferred }) %>
                    <%- include('../partials/forms/account/image', { id: 'image', name: `user[${user.id}][image]`, value: user.image }) %>
                    <%- include('../partials/forms/account/birthday', { id: 'birthday', name: `user[${user.id}][birthday]`, date, value: user.birthday }) %>
                    <%- include('../partials/forms/account/gender', { id: 'gender', name: `user[${user.id}][gender]`, genders, value: user.gender }) %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mb-3">
        <div class="row px-2">
            <a class="btn btn-warning col-5 container" href="/<%= user.id %>">Back</a>
            <input id="primary-button" class="btn btn-primary col-5 container" type="submit" value="Save">
        </div>
    </div>
</form>