<% layout('layouts/boilerplate') %>
<div class="row my-3 pb-2 border-bottom border-1">
    <h1>Players</h1>
</div>
<% if (players.length > 0) { %>
<table class="table table-sm table-bordered table-dark mb-0 lh-lg">
    <thead>
        <tr>
            <% for (const header of ['Name', 'Rounds', 'Demerits', 'Drinks']) { %>
            <td scope="col">
                <div class="d-flex justify-content-center align-items-center">
                    <%= header %>
                </div>
            </td>
            <% }; %>
        </tr>
    </thead>
    <tbody class="table-light">
        <% for (const player of players) { %>
        <tr>
            <td>
                <div class="d-flex justify-content-center align-items-center">
                    <a href="/players/<%= player.id %>">
                        <%= player.name.friendly %>
                    </a>
                </div>
            </td>
            <td>
                <div class="d-flex justify-content-center align-items-center">
                    <%= player.rounds %>
                </div>
            </td>
            <td>
                <div class="d-flex justify-content-center align-items-center">
                    <%= player.demerits %>
                </div>
            </td>
            <td>
                <div class="d-flex justify-content-center align-items-center">
                    <%= player.drinks %>
                </div>
            </td>
        </tr>
        <% }; %>
    </tbody>
</table>
<% } else { %>
<div>
    There are currently no players
</div>
<% }; %>